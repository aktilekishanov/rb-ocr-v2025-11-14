# FastAPI RB-OCR Service - Environment Configuration Template
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# PostgreSQL database connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rb_ocr_db
DB_USER=postgres
DB_PASSWORD=changeme

# Connection pool sizing
# Production: min=5, max=30 for 4 Gunicorn workers
# Development: min=2, max=10 is sufficient
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=30
DB_POOL_TIMEOUT=10.0
DB_COMMAND_TIMEOUT=10.0

# ==========================================
# S3/MINIO CONFIGURATION
# ==========================================
# MinIO object storage for document storage
S3_ENDPOINT=s3-dev.fortebank.com:9443
S3_ACCESS_KEY=your-minio-access-key
S3_SECRET_KEY=your-minio-secret-key
S3_BUCKET=loan-statements-dev
S3_SECURE=true

# ==========================================
# OCR SERVICE
# ==========================================
# Forte OCR service endpoint
OCR_BASE_URL=https://dev-ocr.fortebank.com/v2

# ==========================================
# LLM SERVICE
# ==========================================
# Large Language Model endpoint for data extraction
LLM_ENDPOINT_URL=http://llm-service:8000/v1/chat/completions

# ==========================================
# WEBHOOK CONFIGURATION
# ==========================================
# Bank's REST API callback URL
WEBHOOK_URL=https://bank-api.fortebank.com/idp/callback
WEBHOOK_USERNAME=api_user
WEBHOOK_PASSWORD=api_password

# ==========================================
# APPLICATION SETTINGS
# ==========================================
# Logging
LOG_LEVEL=INFO

# Timezone (default: Asia/Almaty)
TZ=Asia/Almaty

# Pipeline runs directory
RB_IDP_RUNS_DIR=./runs

# IMPORTANT NOTES:
# 1. Never commit .env file with real secrets to git!
# 2. Use different values for dev/staging/production
# 3. Rotate secrets regularly
