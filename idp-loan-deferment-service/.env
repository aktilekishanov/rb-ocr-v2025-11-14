# Core service
IDP_APP_NAME=idp-loan-deferment-service
IDP_ENV=dev
IDP_LOG_LEVEL=INFO
# IDP_RUNS_DIR is usually derived automatically; override only if needed
# IDP_RUNS_DIR=/absolute/path/to/runs

# Observability
IDP_TRACING_ENABLED=false

# OCR client (Tesseract async v2)
# Base URL of the OCR service, e.g. https://dev-ocr.fortebank.com/v2
IDP_OCR_BASE_URL=https://dev-ocr.fortebank.com/v2
# Timeout for OCR HTTP calls in seconds
IDP_OCR_TIMEOUT_SECONDS=60
# Whether to verify SSL certificates for OCR endpoint (set false only for dev/self-signed)
IDP_OCR_VERIFY_SSL=true

# LLM client (OpenAI-like completions)
# Base URL of the LLM completions endpoint, e.g. https://dl-ai-dev-app01-uv01.fortebank.com/openai/v1/completions/v2
IDP_LLM_BASE_URL=https://dl-ai-dev-app01-uv01.fortebank.com/openai/v1/completions/v2
# Timeout for LLM HTTP calls in seconds
IDP_LLM_TIMEOUT_SECONDS=60
# Whether to verify SSL certificates for LLM endpoint (set false only for dev/self-signed)
IDP_LLM_VERIFY_SSL=true

# Pipeline limits / feature flags
IDP_MAX_PDF_PAGES=3
IDP_STAMP_ENABLED=false
